\newtcolorbox{prob}[2][]{
% Set box style
    sidebyside,
    sidebyside align=top,
% Dimensions and layout
    width=\textwidth,
    toptitle=2.5pt,
    bottomtitle=2.5pt,
    righthand width=0.20\textwidth,
% Coloring
    colbacktitle=green!20,
    coltitle=black,
    colback=white,
    colframe=black,
% Title formatting
    title={
      #2 \hfill Grade:\phantom{WWWW}
    },
    fonttitle=\large\bfseries,#1
}

\newenvironment{problem}[1]{
    \begin{prob}{#1}
}
{
    \tcblower
    \centering
    \textit{\scriptsize\bfseries Faculty Comments}
    \end{prob}
}
